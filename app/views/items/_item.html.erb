
<div class="media">
  <div class="media-body">
    <h4 class="media-heading">
        <%=item.name %>
    </h4>
    <small>
      submitted <%= time_ago_in_words(item.created_at) %> ago and will be deleted in
      <%= distance_of_time_in_words(Time.now, item.created_at + 7.days )%>. <br>
    </small>
    <%= link_to "Item Complete", [current_user, item], method: :delete, class: 'glyphicon glyphicon-ok',
    data: { confirm: 'Are you sure you want to delete this item?' } %>
  </div>
</div>
